<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="mybean" class="Service.GreetingService">
    </bean>

    <bean id="mybean1" class="Service.MeetingService">
    </bean>

    <bean id="EmailNotificationService" class="Service.LooseCoupling.EmailNotificationService"></bean>
    <bean id="SMSNotificationService" class="Service.LooseCoupling.SMSNotificationService"></bean>
    <bean id="UserServiceEmail" class="Service.LooseCoupling.UserService">
        <property name="notificationService" ref="EmailNotificationService"></property>
    </bean>

    <bean id="UserServiceSMS" class="Service.LooseCoupling.UserService">
        <property name="notificationService" ref="SMSNotificationService"></property>
    </bean>

</beans>